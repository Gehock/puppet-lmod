#!/bin/sh
# -*- shell-script -*-
########################################################################
#  This file is managed by Puppet, do not modify!
#
#  This is the system wide source file for setting up
#  modules:
#
########################################################################

if [ -z "$USER_IS_ROOT" ]; then

  if [ -z "$MODULEPATH_ROOT" ]; then
    export USER=${USER-${LOGNAME}} # make sure $USER is set
    export LMOD_sys=`uname`

    LMOD_arch=`uname -m`
    if [ "x$LMOD_sys" = xAIX ]; then
      LMOD_arch=rs6k
    fi
    export LMOD_arch


    export MODULEPATH_ROOT="<%= @_modulepath_root %>"
    export LMOD_SETTARG_CMD=":"
    export LMOD_FULL_SETTARG_SUPPORT=no
    export LMOD_COLORIZE=yes
    export LMOD_PREPEND_BLOCK=normal
<% @modulepaths.each do |modulepath| -%>
    export MODULEPATH=$(<%= @prefix %>/lmod/lmod/libexec/addto --append MODULEPATH $MODULEPATH_ROOT/<%= modulepath %>)
<% end -%>
    export MODULEPATH=$(<%= @prefix %>/lmod/lmod/libexec/addto --append MODULEPATH <%= @prefix %>/lmod/lmod/modulefiles/Core)
    export MODULESHOME=<%= @prefix %>/lmod/lmod
    export BASH_ENV=$MODULESHOME/init/bash

    #
    # If MANPATH is empty, Lmod is adding a trailing ":" so that
    # the system MANPATH will be found
    if [ -z "$MANPATH" ]; then
      export MANPATH=:
    fi
    export MANPATH=$(<%= @prefix %>/lmod/lmod/libexec/addto MANPATH <%= @prefix %>/lmod/lmod/share/man)

<% if @set_lmod_package_path -%>
    export LMOD_PACKAGE_PATH=<%= @lmod_package_path %>
<% end -%>
<% unless @avail_styles.empty? -%>
    export LMOD_AVAIL_STYLE=<%= @avail_styles.join(':') %>
<% end -%>
<% if @lmod_admin_file -%>
    export LMOD_ADMIN_FILE=<%= @lmod_admin_file %>
<% end -%>
  fi

  . <%= @prefix %>/lmod/lmod/init/bash >/dev/null # Module Support

fi
